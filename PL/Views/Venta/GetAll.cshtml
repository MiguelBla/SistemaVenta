@model ML.Venta
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2> Compras </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h3></h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12 mt-3">
            @if (Model.cliente.Clientes != null)
            {
                <table class=" table table-hover table-bordered">
                    <tead>
                        <tr>                           
                            <td scope="col">Nombre</td>
                            <td scope="col">Comprar</td>
                        </tr>
                    </tead>

                    <tbody>
                        @foreach (ML.Cliente cliente in Model.cliente.Clientes)
                        {
                            <tr>
                                <td>@cliente.Nombre  @cliente.ApellidoPaterno  @cliente.ApellidoMaterno</td>
                                <td>
                                    <a href="@Url.Action("Formulario","Venta", new {IdCliente = cliente.IdCliente})" class="btn btn-outline-secondary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                        </svg>
                                    </a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    Ocurrio un Error al traer los datos. Error
                </div>
            }
        </div>
    </div>
</div>

